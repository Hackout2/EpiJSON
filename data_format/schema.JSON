{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "title":"EpiJSON Schema V0.5",
    "description":"Epidemiological data in JSON format",
    "definitions":{
        "attribute":{
            "type":"object",
            "properties":{
                "name":{
                    "description":"The name of the attribute",
                    "type":"string"
                },
                "type":{
                    "description":"The type of the attribute",
                    "type":"string",
                    "enum":[
                        "string",
                        "number",
                        "integer",
                        "boolean",
                        "date"
                    ]
                },
                "value":{
                    "type":[
                        "string",
                        "number"
                    ]
                }
            }
        },
        "record":{
            "type":"object",
            "properties":{
                "id": {
                    "type": "string"
                },
                "attributes":{
                    "type":"array",
                    "items":{
                        "$ref":"#/definitions/attribute"
                    }
                },
            "events": {}    
            }
        }
    },
    "type":"object",
    "properties":{
        "metadata":{
            "type":"array",
            "items":{
                "$ref":"#/definitions/attribute"
            }
        },
        "records":{
            "type":"array",
            "items":{
                "$ref":"#/definitions/record"
            }
        }
    }
}